# 3CX Configuration
FQDN=your-3cx-server.example.com
CLIENT_ID=your_oauth_client_id
CLIENT_SECRET=your_oauth_client_secret

# Server Configuration
PORT=8082
HOST=127.0.0.1
NODE_ENV=production

# Admin Authentication
ADMIN_SECRET=change-this-to-a-secure-random-string

# CORS Configuration
# Comma-separated list of allowed origins for admin panel
ALLOWED_ORIGINS=http://localhost:8082,https://your-3cx-server.example.com

# Database (only if 3CX INI file is not available)
# DB_HOST=localhost
# DB_PORT=5480
# DB_NAME=phonesystem
# DB_USER=logsreader
# DB_PASSWORD=

# Logging
LOG_LEVEL=info

# Redis (optional - for caching and performance)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
